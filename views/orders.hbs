<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@7.29.2/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/carusel.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Cultivos Isaias</title>
</head>

<body>
    <nav class="navbar fixed navbar-dark navbar-expand-md bg-success text-whhite">
        <a class="text-white navbar-brand" href="/">
            <i class="fab fa-pagelines"></i> Cultivos Isaias
        </a>
        <button class="navbar-toggler" type="button" data-toogle="collapse" data-target="#navbarCollapse" 
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto menu">
                <li class="nav-item active">
                    <a href="/admin" class="nav-link">Ordenes de compra</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5 mb-3">
        <div class="row">
            <div class="col">
                <form action="/order" class="border border-warning p-3" method="POST" autocomplete="off">
                <input type="hidden" name="_id" value="{{order.id}}">
                <div class="form-group">
                    <label for="">Order</label>
                    <input type="text" class="form-control" value="{{order.name}}" name="order" placeholder="Order">
                </div>
                <div class="form-group">
                    <label for="">Total</label>
                    <input type="text" class="form-control" value="{{order.total}}" name="total" placeholder="Total">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>            
                </form>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/a609533132.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.29.2/dist/sweetalert2.all.min.js"></script>
</body>
</html>
